<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head', {
    title : "SportFit"
  }) %>

  <body class="home">
    <%- include('./partials/header') %>
    <main class="main__home">
      
      <% if (products.length) { %>
      <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/banner1.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/banner2.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/banner3.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/banner4.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/banner5.jpg" class="d-block w-100" alt="...">
          </div>
        </div>
      </div>
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/marcas/adidas-converse.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/marcas/atomik-fila.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/marcas/footy-johnfoos.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/marcas/nike-olympikus.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/marcas/puma-reebok.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/marcas/topper-umbro.jpg" class="d-block w-100" alt="...">
          </div>
          </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

       <div class="home__products">
        <% products.forEach(product => { %>
        <article class="home__article ">
          <a href="/products/detail/<%= product.id %>">
            <img
              src="/images/products/<%= product.images.length > 0 ? product.images[0].name : 'Imagen_por_defecto.jpg'  %>"
              alt="<%= product.name %>"
            />
            <div class="home__article__info box">
              <h2><%= product.name %></h2>
             
              <% if (product.discount) { %>
                <p>$<%= product.price %></p>
                <span>$<%= product.price*product.discount/100 %></span>
              <% }else{ %>
              <span>$<%= product.price %></span>
              <% } %>
            </div>
          </a>
        </article>
        <% }) %>
      </div>
      <% } else { %>
        <div class="alert alert-light" role="alert">
          Producto no encontrado, intente con otra busqueda        
        </div>
<% }%>
     

    </main>

    <!--<%- include('./partials/scripts') %> -->

    <%- include('./partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
   
    
    </script>
  </body>
</html>
