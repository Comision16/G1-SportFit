<!DOCTYPE html>
<html lang="ES">

<%- include('./partials/head', {
  title : 'Dashboard'
}) %>

<body>
  <%- include('./partials/headerAdmin') %>
  
  <main class="container">  
    <section class="row my-5">
      <div class="col-12 col-md-10 mx-auto">
        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <h4 class="card-title">Productos</h4>
            <a class="btn btn-primary" href="/products/agregar"> Nuevo </a>
          </div>
          <div class="card-body table-resposive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Categoria</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead>
              <tbody>

                <% products.forEach(({id, nombre, categoria, precio, image, descripcion }) => { %>
                   <tr>
                    <th scope="row"><%= id %></th>
                    <td><%= nombre %></td>
                    <td><%= categoria %></td>
                    <td>$<%= precio %></td> 
                    <td> 
                    <div class="d-flex gap-3">
                      <button class="btn btn-sm btn-outline-primary border-none" data-bs-toggle="modal" data-bs-target="#exampleModal<%= id %>" ><i class="fa-solid fa-eye"></i></button>
                      <a class="btn btn-sm btn-outline-success border-none" href="/products/editar/<%= id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                      <%- include('./partials/modalProductAdmin',{
                            id,
                            nombre,
                            image,
                            precio,
                            categoria,
                            descripcion
                      }) %>
                    </div>
                  </td>    
                    
                   </tr>
                <% }) %>

                
                
              </tbody>
            </table>

          </div>
        </div>
      </div>

    </section>
  </main>

  <%- include('./partials/scripts') %>
  
 
  
</body>
</html>