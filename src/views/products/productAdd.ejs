<!DOCTYPE html>
<html lang="ES">
<%- include('../partials/head', { title : 'Agregar' }) %>

  <body class="dashboard">
   <%-include('../partials/headerAdmin') %>
        <main class="container">
          <section class="row my-5">
            <div class="col-12 col-md-10 mx-auto">
              <div class="card">
                <div class="card-header d-flex justify-content-between">
                  <nav style="
                  --bs-breadcrumb-divider: url(
                    &#34;data:image/svg + xml,
                    %3Csvgxmlns='http://www.w3.org/2000/svg'width='8'height='8'%3E%3Cpathd='M2.5 0L1 1.5 3.5 4 1 6.5 2.5 8l4-4-4-4z'fill='%236c757d'/%3E%3C/svg%3E&#34;
                  );
                " aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="/admin" class="text-primary">Inicio</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Nuevos: "Productos"
                      </li>
                    </ol>
                  </nav>
                </div>
                <div class="card-body">
                  <form action="/products/crear" method="POST" enctype="multipart/form-data" class="row">
                    <h3>Nuevo: "Producto"</h3>
                    <hr />
                    <div class="col-12 col-md-6 mb-3">
                      <div class="form-floating">
                        <input
                          class="form-control <%= locals.errors && errors.nombre ? 'is-invalid' : locals.old && old.nombre ? 'is-valid' : '' %>"
                          type="text" name="nombre" value="<%= locals.old && old.nombre ? old.nombre : null %>" />
                        <label for="nombre">Nombre</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.nombre ? errors.nombre.msg : null %>
                      </small>
                    </div>


                    <div class="col-6 col-md-3 mb-3">
                      <div class="form-floating">
                        <input
                          class="form-control <%= locals.errors && errors.precio ? ' is-invalid' : locals.old && old.precio ? 'is-valid' : '' %>"
                          type="text" name="precio" value="<%= locals.old && old.precio ? old.precio : null %>" />

                        <label for="precio">Precio</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.precio ? errors.precio.msg : null %>
                      </small>
                    </div>

                    <div class="col-6 col-md-3 mb-3">
                      <div class="form-floating">
                        <input
                          class="form-control <%= locals.errors && errors.descuento ? ' is-invalid' : locals.old && old.descuento ? 'is-valid' : '' %>"
                          type="text" name="descuento"
                          value="<%= locals.old && old.descuento ? old.descuento : null %>" />

                        <label for="descuento">Descuento</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.descuento ? errors.descuento.msg : null %>
                      </small>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                      <div class="form-floating">
                        <select name="talles" class="form-select" id="talles"
                          aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% talles.forEach(talles=> { %>
                            <option value="<%= talles.id %>">
                              <%= talles.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="categoria">Talles</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.talles ? errors.talles.msg : null %>
                      </small>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                      <div class="form-floating">
                        <select name="categoria" class="form-select" id="categoria"
                          aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% categorias.forEach(categorie=> { %>
                            <option value="<%= categorie.id %>">
                              <%= categorie.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="categoria">Categoria</label>

                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.categoria ? errors.categoria.msg : null %>
                      </small>
                    </div>
                    <div class="col-12 col-md-6 mb-3">

                      <div class="form-floating">
                        <select name="colores" class="form-select" id="categoria"
                          aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% colores.forEach(colores=> { %>
                            <option value="<%= colores.id %>">
                              <%= colores.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="colores">Colores</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.colores ? errors.colores.msg : null %>
                      </small>
                    </div>
                    <div class="col-12 col-md-6 mb-3">

                      <div class="form-floating">
                        <select name="marca" class="form-select" id="marca" aria-label="Floating label select example">
                          <option value="" selected hidden></option>
                          <% marcas.forEach(marca=> { %>
                            <option value="<%= marca.id %>">
                              <%= marca.name %>
                            </option>
                            <% }) %>
                        </select>

                        <label for="colores">Marca</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.marca ? errors.marca.msg : null %>
                      </small>
                    </div>

                    <div class="col-12 mb-3">
                      <div class="form-floating">
                        <textarea name="detalleProducto" class="form-control" id="detalleProducto"
                          style="height: 150px"></textarea>

                        <label for="detalleProducto">Descripci√≥n</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.detalleProducto ? errors.detalleProducto.msg : null %>
                      </small>
                    </div>
                    
                    <div class="col-12 d-flex justify-content-between">
                      <div>
                        <input
                          class="form-control <%= locals.errors && errors.image ? 'is-invalid' : locals.old && old.image ? ' is-valid' : '' %>"
                          type="file" name="images" id="images" value="<%= locals.old && old.image ? old.image : null %>"
                          multiple hidden />

                        <label class="btn btn-lg btn-outline-dark w-100" for="images">Imagen</label>
                      </div>
                      <small class="text-danger">
                        <%=locals.errors && errors.image ? errors.image.msg : null %>
                      </small>
                      <button type="submit" class="btn btn-lg btn-primary">
                        Guardar
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </section>
        </main>
  </body>

</html>